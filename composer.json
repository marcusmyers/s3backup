{
  "name": "marcusmyers/s3backup",
  "description": "A command line utility for backing up directories and files to AWS S3",
  "keywords": ["s3", "backup", "s3backup", "aws", "AWS S3", "S3"],
  "license": "MIT",
  "authors": [
    {
      "name": "Mark Myers",
      "email": "marcusmyers@gmail.com"
    }
  ],
  "require": {
    "alchemy/zippy": "0.3.5",
    "aws/aws-sdk-php": "3.18.17",
    "comodojo/zip": "2.1.0",
    "symfony/console": "3.1.0",
    "guzzlehttp/guzzle": "6.2.0"
  },
  "autoload": {
    "psr-4": {
      "MarkMyers\\": "src/"
    }
  },
  "scripts": {
    "post-package-install": [
      "php -r \"file_exists('$HOME/.s3backup') || mkdir('$HOME/.s3backup');\"",
      "php -r \"file_exists('$HOME/.s3backup/config.json') || copy('config.json.example', '$HOME/.s3backup/config.json.examle');\""
    ]
  },
  "bin": [
    "s3"
  ]
}
